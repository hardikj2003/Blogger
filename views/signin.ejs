<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('./partials/head') %>
        <title>Sign In</title>
        <script src="https://cdn.tailwindcss.com"></script>
        <script>
            tailwind.config = {
                theme: {
                    extend: {
                        colors: {
                            indigo: {
                                100: '#e0e7ff',
                                500: '#6366f1',
                                600: '#4f46e5',
                                700: '#4338ca',
                            },
                            purple: {
                                600: '#7c3aed',
                                700: '#6d28d9',
                            },
                        }
                    }
                }
            }
        </script>
</head>

<body class="bg-gray-100">

    <%- include('./partials/nav') %>

        <div class="container mx-auto mt-8 max-w-md">
            <div class="bg-white shadow-md rounded-lg px-8 py-6">
                <h3 class="text-2xl font-bold text-center mb-6 text-gray-800">Sign In</h3>
                <form action="/user/signin" method="post">
                    <div class="mb-4">
                        <label for="exampleInputEmail1" class="block text-sm font-medium text-gray-700 mb-1">Email
                            address</label>
                        <input type="email"
                            class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-indigo-500"
                            id="exampleInputEmail1" name="email" aria-describedby="emailHelp">
                        <div id="emailHelp" class="mt-1 text-sm text-gray-500">We'll never share your email with anyone
                            else.</div>
                    </div>
                    <div class="mb-6">
                        <label for="exampleInputPassword1"
                            class="block text-sm font-medium text-gray-700 mb-1">Password</label>
                        <input type="password"
                            class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-indigo-500"
                            name="password" id="exampleInputPassword1">
                    </div>

                    <button type="submit"
                        class="w-full bg-gradient-to-r from-indigo-600 to-purple-600 text-white font-bold py-2 px-4 rounded-md transition duration-300 ease-in-out hover:from-indigo-700 hover:to-purple-700">
                        Sign In
                    </button>
                </form>
            </div>
        </div>

        <%- include('./partials/scripts') %>
</body>

</html>